<h3>Log in</h3>

<% if flash[:notice] %>
  <div class="alert alert-info block" role="alert"><%= flash[:notice] %></div>
<% end %>

<%= form_tag '/login',:class => 'form-inline' do %>
<!--   <%= label_tag :username, 'Username: ' %> -->
    <%= text_field_tag :username, nil, :placeholder => 'Username', :class =>"form-control" %>
    <!-- <%= label_tag :password, 'Password: ' %> -->
    <%= password_field_tag :password, nil, :placeholder => 'Password', :class =>"form-control" %>
    <%= submit_tag 'Sign in', :class =>"btn btn-default" %>
<% end %>

