<h3>Log in</h3>

<% if flash[:notice] %>
  <div class="alert alert-info block" role="alert"><%= flash[:notice] %></div>
<% end %>

<%= form_tag '/login' do %>
  <p>
    <%= label_tag :username, 'Username: ' %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password, 'Password: ' %>
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag 'Sign in' %>
<% end %>