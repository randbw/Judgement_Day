<!DOCTYPE html>
<html>
<head>
  <title>Judgement Day</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="mainContainer">
<h1>Judgement Day</h1>
  <nav>
    <ul>
      <li><%= link_to('View arguments', root_path) %></li>
      <li><%= link_to('View users',users_path) %></li>
        <% if @current_user.present? %>
        <li><%= link_to('New argument',new_argument_path) %></li>
        <li><%= @current_user.username %> logged in</li>
        <li><%= link_to("Edit #{@current_user.username}", edit_user_path(@current_user)) %></li>
        <li><%= link_to("Log out",login_path, :method => :delete) %></li>
      <% else %>
        <li><%= link_to('Login',login_path) %></li>
        <li><%= link_to('Create Account', new_user_path) %></li>
      <% end %>
    </ul>
  </nav>

  <%= yield %>

</div>

<!-- disqus -->
